<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity">


    <ImageView
        android:id="@+id/line3Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/tick2Animate"
        app:layout_constraintTop_toBottomOf="@+id/line2Animate"
        app:srcCompat="@drawable/avd_lines" />

    <ImageView
        android:id="@+id/line2Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/tick2Animate"
        app:layout_constraintTop_toBottomOf="@+id/line1Animate"
        app:srcCompat="@drawable/avd_lines" />

    <ImageView
        android:id="@+id/tick1Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="296dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avd_ticks" />

    <ImageView
        android:id="@+id/tick2Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="344dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avd_ticks" />

    <ImageView
        android:id="@+id/elipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toStartOf="@+id/line3Animate"
        app:layout_constraintTop_toBottomOf="@+id/tick2Animate"
        app:srcCompat="@drawable/elipse1" />

    <ImageView
        android:id="@+id/line1Animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toEndOf="@+id/tick1Animate"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avd_lines" />

</androidx.constraintlayout.widget.ConstraintLayout>